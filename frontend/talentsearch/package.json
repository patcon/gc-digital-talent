{
  "name": "talentsearch",
  "version": "1.0.0",
  "description": "Client side service using Lumen and ReactJS.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GCTC-NTGC/gc-digital-talent.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GCTC-NTGC/gc-digital-talent/issues"
  },
  "homepage": "https://github.com/GCTC-NTGC/gc-digital-talent#readme",
  "engines": {
    "node": "14.18.1",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint ./resources/js --ext .js,.ts",
    "lint:fix": "eslint ./resources/js --fix --ext .js,.ts",
    "prettier": "prettier --write ./resources/js",
    "dev": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "production": "mix --production",
    "h2-compile": "h2-compile",
    "h2-watch": "h2-watch",
    "h2-build": "h2-build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "codegen": "graphql-codegen",
    "intl-extract": "formatjs extract ./resources/js/**/*.ts* --ignore ./**/*d.ts --out-file resources/js/lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "intl-compile": "formatjs compile ./resources/js/lang/fr.json --out-file ./resources/js/lang/frCompiled.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
  },
  "dependencies": {
  }
}
